<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.shijiu.calculator.mortgage.CalculateResultActivity">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/id_first_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="每月还款金额"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/id_month_repay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/colorSelectText"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout style="@style/dropDownList">

            <TextView
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="贷款总额" />

            <TextView
                android:id="@+id/id_mortgage_total"
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/lineHorizontal" />

        <LinearLayout style="@style/dropDownList">

            <TextView
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="支付利息总额" />

            <TextView
                android:id="@+id/id_rate_total"
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>
        <View style="@style/lineHorizontal" />

        <LinearLayout style="@style/dropDownList">

            <TextView
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="还款总额" />

            <TextView
                android:id="@+id/id_repay_total"
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>
        <View style="@style/lineHorizontal" />

        <LinearLayout style="@style/dropDownList">

            <TextView
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="按揭年数" />

            <TextView
                android:id="@+id/id_total_years"
                style="@style/keyTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View style="@style/lineHorizontal" />
    </LinearLayout>

</LinearLayout>
